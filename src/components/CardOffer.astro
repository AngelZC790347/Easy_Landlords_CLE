---
const { button } = Astro.props;
---

<article
    class="rounded-lg border border-gray-100 bg-white p-4 shadow-xs transition hover:shadow-lg sm:p-6"
>
    <span class="inline-block rounded-sm bg-primary-600 p-2 text-white">
        <slot name="icon" />
    </span>

    <a href="#">
        <div class="mt-0.5 text-lg font-medium text-text-900">
            <slot name="title" />
        </div>
    </a>

    <div class="mt-2 line-clamp-3 text-sm/relaxed text-text-900">
        <slot name="description" />
    </div>
    {
        button && (
            <a
                href="#"
                class="group mt-4 inline-flex items-center gap-1 text-sm font-medium text-primary-700"
            >
                Find out more
                <span
                    aria-hidden="true"
                    class="block transition-all group-hover:ms-0.5 rtl:rotate-180"
                >
                    &rarr;
                </span>
            </a>
        )
    }
</article>
